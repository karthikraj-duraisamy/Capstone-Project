<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stackWidgetItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/stackWidgetItemContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="16dp"
            android:maxLines="4"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="The story of the article goes here. It may be more than one liner also."/>

        <TextView
            android:id="@+id/stackWidgetItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end|end"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:textSize="12sp"
            android:textStyle="italic|bold"
            tools:text="Author John" />

    </FrameLayout>
</LinearLayout>
