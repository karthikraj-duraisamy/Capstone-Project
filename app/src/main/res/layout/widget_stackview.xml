<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stackWidgetItem"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorWhite">

        <TextView android:id="@+id/stackWidgetItemContent"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:textSize="16sp"
            android:maxLines="4"
            tools:text="The story of the article goes here. It may be more than one liner also."
            android:padding="16dp"
            android:layout_gravity="top"
            android:textStyle="bold"
            android:layout_marginBottom="16dp">
        </TextView>

        <TextView android:id="@+id/stackWidgetItemUsername"
            android:textSize="10sp"
            android:layout_gravity="bottom|right|end"
            android:textStyle="italic|bold"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            tools:text="Author John" />

    </FrameLayout>
</LinearLayout>